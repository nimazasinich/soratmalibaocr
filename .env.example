# Server Configuration
PORT=8000
NODE_ENV=development

# Database
DB_PATH=./database/finance.db

# OCR Configuration
OCR_LANG=fas+eng
OCR_WORKERS=2

# Authentication
JWT_SECRET=change_me_to_secure_random_string
JWT_EXPIRY=24h

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# CORS
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Fraud Detection Thresholds
FRAUD_CFO_RATIO_THRESHOLD=1.0
FRAUD_RECEIVABLE_GROWTH_THRESHOLD=1.2
FRAUD_ASSET_INFLATION_THRESHOLD=0.15
FRAUD_ACCRUAL_RATIO_THRESHOLD=0.1

# Risk Assessment
RISK_DEBT_EQUITY_THRESHOLD=2.0
RISK_CURRENT_RATIO_THRESHOLD=1.5
RISK_QUICK_RATIO_THRESHOLD=1.0
